<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<GridPane alignment="center" hgap="10" prefHeight="301.0" prefWidth="503.0" vgap="10"
          xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="alarmClock.Controller">
    <columnConstraints>
        <ColumnConstraints maxWidth="111.0" minWidth="108.0" prefWidth="108.0"/>
        <ColumnConstraints maxWidth="150.0" minWidth="86.0" prefWidth="128.0"/>
        <ColumnConstraints maxWidth="147.0" minWidth="87.0" prefWidth="87.0"/>
        <ColumnConstraints maxWidth="154.0" minWidth="96.0" prefWidth="145.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>
    <children>
        <TextField fx:id="subjectField" prefHeight="25.0" prefWidth="107.0" promptText="Subject">
            <GridPane.margin>
                <Insets left="10.0" top="10.0"/>
            </GridPane.margin>
        </TextField>
        <TextField fx:id="descriptionField" prefHeight="25.0" prefWidth="115.0" promptText="Description"
                   GridPane.columnIndex="1">
            <GridPane.margin>
                <Insets top="10.0"/>
            </GridPane.margin>
        </TextField>
        <TextField fx:id="timeField" promptText="HH:MM:SS" GridPane.columnIndex="2">
            <GridPane.margin>
                <Insets top="10.0"/>
            </GridPane.margin>
        </TextField>
        <DatePicker fx:id="datePickerField" promptText="DD/MM/YYYY" GridPane.columnIndex="3">
            <GridPane.margin>
                <Insets right="10.0" top="10.0"/>
            </GridPane.margin>
            <padding>
                <Insets right="10.0"/>
            </padding>
        </DatePicker>
        <TableView fx:id="reminderTable" GridPane.columnSpan="4" GridPane.rowIndex="1">
            <columns>
                <TableColumn fx:id="subjectColumn" prefWidth="115.0" text="Subject">
                    <cellValueFactory><PropertyValueFactory property="subject" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="descriptionColumn" prefWidth="134.0" text="Description">
                    <cellValueFactory><PropertyValueFactory property="description" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="timeColumn" prefWidth="97.0" text="Time">
                    <cellValueFactory><PropertyValueFactory property="time" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="dateColumn" prefWidth="153.0" text="Date">
                    <cellValueFactory><PropertyValueFactory property="date" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
        <Button fx:id="addButton" mnemonicParsing="false" onAction="#addButtonPressed" prefHeight="25.0"
                prefWidth="71.0" text="Add" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets bottom="10.0" top="10.0"/>
            </GridPane.margin>
        </Button>
        <Button fx:id="rmButton" mnemonicParsing="false" onAction="#rmButtonPressed" prefHeight="25.0" prefWidth="81.0"
                text="Remove" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets bottom="10.0" top="10.0"/>
            </GridPane.margin>
        </Button>
        <Label fx:id="currentTimeLabel" prefHeight="17.0" prefWidth="110.0" text="Current Time" GridPane.columnIndex="3"
               GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets right="10.0" top="10.0"/>
            </GridPane.margin>
        </Label>
    </children>
</GridPane>
